@using Common.StringConstants
@using Domain.Client
@using WebApp.Model
@using WebApp.Model.GenericMvc
@using WebApp.Model.TableRenders.Renders

@model WebApp.Model.TableViewModel

@{
    var descriptor = TableBuilder<ClientDisplay>.CreateNew()
        .AddColumn(x => x.Name)
        .AddColumn(x => x.Email)
        .AddColumn(x => x.EmailConfirmed)
        .AddColumn(x => x.Balance, new RowOptions{ColumnClass = Constants.CurrencyClass})
        .AddColumn(x => x.ContractStartDate)
        .AddColumn(x => x.ContractEndDate)
        .Build();
}

@await Html.TableAsync(Model, descriptor)

