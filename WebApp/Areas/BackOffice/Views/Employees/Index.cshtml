@using DAL.Model
@model List<ApplicationUser>


@await Html.RenderStatusMessageAsync()
@await Html.RenderPageTitleAsync()

<div class="m-content">
    <div class="m-portlet m-portlet--full-height">
        <div class="m-portlet__body">
            <div class="m-section">
                <div class="m-section__content">
                    
                    <div style="margin: 10px">
                        @Html.ActionLink("Add User", "Create", new {}, new { @class = "btn btn-primary btn-sm" })
                    </div>

                    <table class="table table-striped m-table">
                        <tr>
                            <th>
                                @Html.LabelFor(x => x[0].UserName)
                            </th>
                            <th>
                                @Html.LabelFor(x => x[0].Email)
                            </th>
                            <th>
                                @Html.LabelFor(x => x[0].PhoneNumber)
                            </th>
                            <th>
                                @Html.LabelFor(x => x[0].EmailConfirmed)
                            </th>
                            <th></th>
                        </tr>

                        @if (Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EmailConfirmed)
                                    </td>

                                    <td>
                                        @Html.ActionLink("Change Password", "ChangePassword", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                                    </td>
                                </tr>
                            }
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
