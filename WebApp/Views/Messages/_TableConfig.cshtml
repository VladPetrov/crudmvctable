@using Domain.Message
@using WebApp.Model.GenericMvc
@using WebApp.Model.TableRenders.Renders

@model TableViewModel

@{
    var descriptor = TableBuilder<MessageDisplay>.CreateNew()
        .AddColumn(x => x.Text)
        .AddColumn(x => x.IsViewed)
        .AddColumn(x => x.Number)
        .AddColumn(x => x.Type)
        //.SetActions(TableAcrions.Add, TableAcrions.Details, TableAcrions.Edit, TableAcrions.Delete)
        .AddRowRenderer(new RowStyler())
        .Build();
}

@await Html.TableAsync(Model, descriptor)

