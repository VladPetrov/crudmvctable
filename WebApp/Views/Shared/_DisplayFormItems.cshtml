
@foreach (var meta in ViewData.ModelExplorer.Properties.Where(x => x.Metadata.ShowForDisplay))
{
    <div class="form-group">
        @Html.Label(meta.Metadata.Name, null, htmlAttributes: new {@class = "control-label col-md-2"})
        <div class="col-md-10">
            @Html.Display(meta.Metadata.Name, new {htmlAttributes = new {@class = "form-control"}})
        </div>
    </div>
}
