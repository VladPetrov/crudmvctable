@Html.ValidationSummary(true, "", new { @class = "text-danger" })
@foreach (var meta in ViewData.ModelExplorer.Properties.Where(x => x.Metadata.ShowForEdit))
{
    <div class="form-group">
        @Html.Label(meta.Metadata.Name, null, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.Editor(meta.Metadata.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessage(meta.Metadata.Name, "", new { @class = "text-danger" })
        </div>
    </div>
}
