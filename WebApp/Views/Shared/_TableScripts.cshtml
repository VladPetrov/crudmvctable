@{
    var descriptor = Html.GetTableDescriptor();
    var context = Html.GetPageContext();
}

<script>
    {
        let service = scripts.TableService.instance('@context.TableServiceName');

        service.startListeningToEvents();
    }

    $(`#@context.TableContainerId .currency-euro`).removeAttr("type");
    $(`#@context.TableContainerId .currency-euro`).inputmask(
        {
            alias: "currency",
            prefix: '€',
            onBeforePaste: function (pastedValue, opts)
            {
                console.log(pastedValue, opts);
            },
            removeMaskOnSubmit: true
        });

    console.log($(`#@context.TableContainerId .currency-euro`));
</script>