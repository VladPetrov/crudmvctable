@using DAL.Model
@model List<ApplicationUser>
@{
    ViewData["Title"] = "Users";
}

<h2>@ViewData["Title"]</h2>

@{
    string status = ViewBag.StatusMessage;
}

@Html.Partial("_StatusMessage", status)


<div style="margin: 10px">
    @Html.ActionLink("Add User", "Create", new {}, new { @class = "btn btn-primary btn-sm" })
</div>

<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.LabelFor(x => x[0].UserName)
        </th>
        <th>
            @Html.LabelFor(x => x[0].Email)
        </th>
        <th>
            @Html.LabelFor(x => x[0].PhoneNumber)
        </th>
        <th>
            @Html.LabelFor(x => x[0].EmailConfirmed)
        </th>
        <th></th>
    </tr>

    @if (Model.Any())
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailConfirmed)
                </td>

                <td>
                    @Html.ActionLink("Change Password", "ChangePassword", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    }
</table>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
